# -- Icons settings ------------------------------------------------------------
gtk-icon-sizes = "gtk-button=16,16"
# ------------------------------------------------------------------------------

# -- Misc settings -------------------------------------------------------------
gtk-button-images	= 1 
gtk-toolbar-style	= 0
gtk-auto-mnemonics	= 1
# ------------------------------------------------------------------------------

# -- General theme settings ----------------------------------------------------
style "murrine-default"
{
	xthickness = 1
	ythickness = 1

	GnomeHRef         ::link_color                   = @link_color		
	GtkHTML           ::link-color                   = @link_color
 	GtkIMHtmlr        ::hyperlink-color              = @link_color
	GtkIMHtml         ::hyperlink-color              = @link_color
	GtkWidget         ::link-color                   = @link_color
	GtkWidget         ::visited-link-color           = @text_color

	GtkButton         ::child-displacement-x         = 1
	GtkButton         ::child-displacement-y         = 1
	GtkButton         ::default-border               = { 0, 0, 0, 0 }
	GtkCheckButton    ::indicator-size               = 14
	
	GtkWidget         ::new-tooltip-style            = 1
	GtkWidget         ::focus-line-width             = 1
	GtkWidget         ::focus-padding                = 0

	GtkImage          ::x-ayatana-indicator-dynamic  = 1

	GtkScrolledWindow ::scrollbar-spacing            = 0
	GtkScrolledWindow ::scrollbar-within-bevel       = 0

	GtkPaned          ::handle-size                  = 6

	GtkRange          ::trough-border                = 0
	GtkRange          ::slider-width                 = 15
	GtkRange          ::stepper-size                 = 15
	GtkRange          ::stepper_spacing              = 0
	GtkRange          ::trough-under-steppers        = 0
	
	GtkScale		  ::trough-border 				 = 0
	GtkScale          ::slider-length                = 13
	GtkScale          ::slider-width                 = 13
	GtkScale		  ::trough-side-details          = 1

	GtkScrollbar      ::min-slider-length            = 20
	GtkScrollbar      ::activate-slider              = 1
	GtkMenuBar        ::internal-padding             = 0
	GtkExpander       ::expander-size                = 10
	GtkToolbar        ::internal-padding             = 0
	GtkTreeView       ::expander-size                = 10
	GtkTreeView       ::indent-expanders             = 1
	GtkTreeView       ::vertical-separator           = 0

	GtkMenu           ::horizontal-padding           = 0
	GtkMenu           ::vertical-padding             = 0
	
	GtkProgressBar	  ::min-horizontal-bar-height    = 20
	GtkProgressBar    ::min-vertical-bar-width 		 = 14	

	WnckTasklist      ::fade-overlay-rect = 0

	GtkEntry          ::honors-transparent-bg-hint   = 1
	GtkEntry          ::state-hint                   = 0
	GtkEntry          ::progress-border              = { 2, 2, 2, 2 }
	
	GtkMenuBar        ::window-dragging              = 1

	GtkNotebook		  ::tab-overlap 				 = -1
# ------------------------------------------------------------------------------

# -- Color Definitions --------------------------------------------------------- 
	fg[NORMAL]        = @fg_color
	fg[PRELIGHT]      = @fg_color
	fg[SELECTED]      = @selected_fg_color
	fg[ACTIVE]        = @fg_color
	fg[INSENSITIVE]   = darker (@fg_color)

	bg[NORMAL]        = @bg_color
	bg[PRELIGHT]      = shade (1.02, @bg_color)
	bg[SELECTED]	  = @selected_bg_color
	bg[INSENSITIVE]   = @bg_color
	bg[ACTIVE]        = shade (1.04, @bg_color)

	base[NORMAL]      = @base_color
	base[PRELIGHT]    = shade (0.95, @bg_color)
	base[ACTIVE]      = shade (0.92, @selected_bg_color)
	base[SELECTED]    = shade (0.93, @selected_bg_color)
	base[INSENSITIVE] = @bg_color

	text[NORMAL]      = @text_color
	text[PRELIGHT]    = @text_color
	text[ACTIVE]      = @selected_fg_color
	text[SELECTED]    = @selected_fg_color
	text[INSENSITIVE] = darker (@fg_color)
# ------------------------------------------------------------------------------

# -- Murrine Settings ----------------------------------------------------------	
	engine "murrine"
	{
		animation           = TRUE
		arrowstyle          = 2		
		border_shades       = { 1.2, 1.0 }      		
		comboboxstyle       = 0                 	
		contrast            = 0.6            
		focus_color         = mix (0.1, @bg_color, shade (1.1, @selected_bg_color))
		glazestyle          = 1                 
		gradient_shades     = { 1.1, 1.0, 1.0, 0.88 } 
		glowstyle           = 4                 
		glow_shade          = 1.1
		highlight_shade     = 1.0               
		lightborder_shade   = 1.4               
		lightborderstyle    = 0                 
		listviewheaderstyle = 1                 
		listviewstyle       = 2                 
		menubaritemstyle    = 1                
		menubarstyle        = 2                
		menuitemstyle       = 1                
		menustyle           = 0                
		prelight_shade      = .95              	
		reliefstyle         = 2                 
		rgba                = FALSE             
		roundness           = 2                                 
		separatorstyle      = 1                 
		sliderstyle         = 0                 
		stepperstyle        = 1                 
		progressbarstyle    = 1                 
		focus_color         = @selected_bg_color
		shadow_shades       = { 1.1, 0.95 }      	
		textstyle           = 0                 		
		toolbarstyle        = 2                 
		handlestyle 		= 1
		expanderstyle 		= 2	
	}
# ------------------------------------------------------------------------------
}

